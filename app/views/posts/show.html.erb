<% provide(:title, "NEWS") %>
<div class="row">
  <div class="col-md-12">
    <h3>News</h3>
    <li id="post-<%= @post.id %>" class="post-info d-flex flex-column flex-lg-row">
      <div class="post-column">
        <span class="title"><%= @post.title %></span>
        <span class="description"><%= simple_format(h(@post.description)) %></span>
        <%= link_to @post.url, @post.url, target: :_blank, class: "url" %>
        <span class="date"><%= @post.date %></span>
        <span class="edit"><%= link_to 'edit', edit_post_path(@post.id) if user_signed_in?%></span>
      </div>
      <div class="d-flex flex-column w-100">
        <% if @post.images.attached? %>
          <% @post.images.each do |image| %>
            <%= image_tag image.variant(resize:'700x700').processed, class:"images-show mb-5" %>
          <% end %>
        <% end %>
      </div>
    </li>
  </div>
</div>
<% provide(:title, "LIVE - edit") %>
<h3>LIVEを編集する</h3>
<%= link_to '削除する', @live, method: :delete, class: 'mb-3 btn btn-dark', data: { confirm: '削除してよろしいですか？'} %>
<%= form_with(model: @live, local: true) do |f| %>
  <div class="form-group text-light">
    <%= f.label :date, '日程' %>
    <%= f.date_field :date, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :place, '場所' %>
    <%= f.text_field :place, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :title, 'イベント名' %>
    <%= f.text_field :title, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :time, 'OPEN/START' %>
    <%= f.text_field :time, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :price, '料金' %>
    <%= f.text_field :price, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :performer, '出演者' %>
    <%= f.text_area :performer, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :sitelink, 'URL' %>
    <%= f.text_field :sitelink, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-light">
    <%= f.label :description, '詳細' %>
    <%= f.text_area :description, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group images text-light">
    <%= f.label :images, '画像' %>
    <%= f.file_field :images, accept: 'image/jpeg,image/gif,image/png', multiple: true, class: 'form-control' %>
  </div>

  <p class="text-light">現在登録されている画像（削除するものはチェックしてください）</p>
  <% @live.images.each do |image| %>
    <%= f.check_box :image_ids, {multiple: true}, image.id, false %>
    <%= image_tag image, size:"100x100" %> <br>
  <% end %>

  <div class="form-group">
    <%= f.submit  '編集する', class: 'btn btn-primary' %>
  </div>

<% end %>

<script type="text/javascript">
  $('#live_images').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @one_word, remote: true) do |f| %>
      <div class="form-group m-2">
        <%= f.label :content, '文章' %>
        <%= f.text_area :content, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group m-2">
        <%= f.label :image, '画像' %>
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'form-control' %>
      </div>

      <% if @one_word.image.attached? %>
        <div class="form-group m-2">
          現在登録されている画像（削除する場合はチェックしてください）
          <%= f.check_box :image_delete %>
          <%= image_tag @one_word.image, size:"100x100" %> <br>
        </div>
      <% end %>

      <div class="form-group m-2">
        <%= f.submit '設定する', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>